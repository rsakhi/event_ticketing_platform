<%= render "shared/header" %>
<div>
  <h3>Event Details</h3>
  <ul>
    <li>Title: <%= @event.title%></li>
    <li>Date: <%= @event.start_date.strftime("%F")%></li>
    <li>Price $: <%= get_price(@event.price).html_safe%></li>
    <li>Venue: <%= @event.venue%></li>
    <li>Totle Number of geuest: <%= @event.users.count %></li>
  </ul>
  <div>Guest List </div>
  <% @event.users.each do |user| %>
    <ul>
      <li>
        <span style="margin-right: 50px"> <%= user.name %></span>
        <span> <%= user.gender %></span>
      </li> 
    </ul>
  <% end%>
</div>
